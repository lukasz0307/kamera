<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/image"
    />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zrób zdjęcie"
        android:layout_centerHorizontal="true"
        android:id="@+id/button"
        android:layout_below="@+id/image"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/szerokosc"
        android:layout_below="@+id/button"
        android:text="Szerokosc"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dlugosc"
        android:layout_below="@+id/szerokosc"
        android:text="Długosc"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dlugosc"
        android:text="dostawca"
        android:layout_centerHorizontal="true"
        android:id="@+id/dostawca"
        />
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dostawca"
        android:layout_centerHorizontal="true"
        android:text="Schowaj dane z gpsa"
        />
</RelativeLayout>